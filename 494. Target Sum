class Solution {
    public int findTargetSumWays(int[] nums, int S) {
        
        int sum = IntStream.of(nums).sum();
        int len = nums.length;
        
        if(sum < S || (sum + S)%2 != 0) return 0;
        
        int newS = (S + sum)/2;
        int dp[] = new int[newS + 1];
        dp[0] = 1;
        
        for(int j = 0; j < len; j++){
            for(int curr = newS; curr >= nums[j]; curr--) dp[curr] = dp[curr] + dp[curr - nums[j]];
        }
        
        return dp[newS];
    } 
}
